{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "ViewMetaWidgetNumber": {
            "description": "Widget can be uniquely identified by numeric id",
            "properties": {
                "gridWidth": {
                    "type": "number"
                },
                "position": {
                    "type": "number"
                },
                "widgetId": {
                    "description": "Reference to `id` property from *.widget.json file",
                    "type": "number"
                }
            },
            "required": [
                "position",
                "widgetId"
            ],
            "type": "object"
        },
        "ViewMetaWidgetString": {
            "description": "Widget can be uniquely identified by string id",
            "properties": {
                "gridWidth": {
                    "type": "number"
                },
                "position": {
                    "type": "number"
                },
                "widgetName": {
                    "description": "Reference to `name` property from *.widget.json file",
                    "type": "string"
                }
            },
            "required": [
                "position",
                "widgetName"
            ],
            "type": "object"
        },
        "ViewNavigationGroup": {
            "description": "Description of groups in the navigation menu.\n\nUsed to create nesting levels of menu items.",
            "properties": {
                "child": {
                    "items": {
                        "anyOf": [
                            {
                                "$ref": "#/definitions/ViewNavigationItem"
                            },
                            {
                                "$ref": "#/definitions/ViewNavigationGroup"
                            }
                        ]
                    },
                    "type": "array"
                },
                "defaultView": {
                    "type": "string"
                },
                "hidden": {
                    "type": "boolean"
                },
                "id": {
                    "description": "TODO identifier will be nullable and string-only in 2.0.0",
                    "type": [
                        "string",
                        "number"
                    ]
                },
                "title": {
                    "type": "string"
                }
            },
            "required": [
                "child",
                "title"
            ],
            "type": "object"
        },
        "ViewNavigationItem": {
            "description": "Description of the destination in the navigation menu.",
            "properties": {
                "hidden": {
                    "type": "boolean"
                },
                "id": {
                    "description": "TODO: remove in 2.0.0",
                    "type": "string"
                },
                "viewName": {
                    "type": "string"
                }
            },
            "type": "object"
        }
    },
    "properties": {
        "name": {
            "description": "Unique identifier for the view",
            "type": "string"
        },
        "title": {
            "description": "Displayed name",
            "type": "string"
        },
        "url": {
            "description": "Url for the view (usually in form of `${screen.name}/${view.name}`)",
            "type": "string"
        },
        "widgets": {
            "anyOf": [
                {
                    "$ref": "#/definitions/ViewMetaWidgetNumber"
                },
                {
                    "$ref": "#/definitions/ViewMetaWidgetString"
                }
            ],
            "description": "Widgets present on the view"
        }
    },
    "required": [
        "name",
        "title",
        "url",
        "widgets"
    ],
    "type": "object"
}

